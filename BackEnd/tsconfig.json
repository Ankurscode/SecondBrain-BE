{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",                // or wherever you want compiled JS
    "rootDir": "./src",                // adjust if your TS files are in src/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],             // adjust to match your source folder
  "exclude": ["node_modules", "dist"]
}